---
import CheckAvailability from '@/components/home/check-availability/CheckAvailability.astro';
import HomeAbout from '@/components/home/home-about/HomeAbout.astro';

import CoreFeatures from '@/components/core-features/CoreFeatures.astro';
import Benefies from '@/components/home/benefies/Benefies.astro';
import Foods from '@/components/home/foods/Foods.astro';
import IntroVideo from '@/components/home/intro-video/IntroVide.astro';
import { EmblaCarousel } from '@/components/react/EmblaCarousel';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Hotel Miranda" preload>
  <section class="home">
    <div class="home__content wrapper">
      <span class="home__subtitle">THE ULTIMATE LUXURY EXPERIENCE</span>
      <h2 class="home__title">The Perfect Base For You</h2>

      <div class="home__tbns">
        <a class="home__btn home__btn--mustard btn-mustard" href="#">Take a Tour</a>
        <a class="home__btn" href="#">Learn more</a>
      </div>
    </div>
  </section>

  <CheckAvailability />
  <HomeAbout />

  <section class="home-rooms wrapper margin-bottom">
    <p class="home-rooms__subtitle title">rooms</p>
    <h3 class="home-rooms__title">Hand Picked Rooms</h3>

    <EmblaCarousel client:only="react" />
  </section>

  <IntroVideo />
  <CoreFeatures />

  <Foods />

  <Benefies />
</Layout>

<style>
  .home {
    padding: 1em;
    height: 800px;
    color: var(--white-color);
    background-image: url(/images/bg-home-2.webp);
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;

    background-attachment: fixed;

    display: flex;
    align-items: center;

    @media screen and (max-width: 500px) {
      height: 500px;
    }
  }
  .home__content {
    width: 100%;
    @media screen and (max-width: 500px) {
      padding-top: 5rem;
    }
  }

  .home__subtitle {
    font-size: clamp(0.9, 1vw, 0.875rem);
    margin-bottom: 1rem;
    display: block;
  }
  .home__title {
    max-width: 43.3125rem;
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: clamp(3.2rem, 10vw, 7.1rem);
    letter-spacing: 0.1375rem;
    text-wrap: wrap;
  }
  .home__tbns {
    max-width: 40rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  .home__btn {
    flex-grow: 1;
    flex-basis: 13rem;
    height: 3.75rem;

    text-transform: uppercase;
    outline: 0.0625rem solid var(--white-color);

    display: flex;
    align-items: center;
    justify-content: center;

    margin-bottom: 1em;
  }
  .home__btn--mustard {
    outline: none;
  }
  .home__date {
    background-color: var(---black-color);
  }
  .home-rooms {
    padding: 1rem;
  }

  .home-rooms__subtitle {
    font-size: 1.3rem;
    text-align: center;
    text-transform: uppercase;
    font-weight: 600;
  }
  .home-rooms__title {
    font-size: 3.5rem;
    text-align: center;
    margin-top: 0;
    font-weight: 500;
  }
</style>
