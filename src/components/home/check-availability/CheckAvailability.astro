---
import './checkAvailability.css';
---

<section class="date margin-bottom">
  <form class="date__form wrapper">
    <div class="date__form-inputs">
      <label class="date__form-label" for="arrival">Arrival Date</label>
      <input class="date__form-input" type="date" name="arrival" id="arrival" />

      <label class="date__form-label" for="depurate">Depurate Date</label>
      <input class="date__form-input" type="date" name="depurate" id="depurate" />
    </div>
    <button class="date__form-submit btn-mustard" type="submit">Check availability</button>
  </form>
</section>
